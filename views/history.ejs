<!doctype html>
<html lang="en">
<%- include('head.ejs'); -%>
<body class="main-body">

<%- include('header.ejs'); -%>

<div style="margin-left:5cm;margin-bottom: 1cm; margin-top: 30px; margin-right: 5cm">
    <div class="row">
        <div class="form-holder">
            <div class="form-profile-content ">
                <% for (let i = 0; i < history.length; i++) { %>
                <!-- ------------ -->
                <div class="form-items mb-5">
                    <h4>Order # <%= i + 1 %>. <%= history[i].date.toLocaleString() %></h4>
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Count</th>
                            <th scope="col">Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% Object.keys(history[i].items).forEach(function (key) { %>
                            <tr>
                                <td><%= history[i].items[key].item.title %></td>
                                <td><%= history[i].items[key].item.price %></td>
                                <td><%= history[i].items[key].count %></td>
                                <td><%= history[i].items[key].total %></td>
                            </tr>
                        <% }) %>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><%= history[i].total %></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <!-- ------------ -->
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs'); -%>

</body>
</html>