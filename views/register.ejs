<!doctype html>
<html lang="en">

<%- include('head.ejs'); -%>

<body class="main-body">

<%- include('header.ejs'); -%>

<div style="margin-left:5cm;margin-bottom: 1cm; margin-top: 30px; margin-right: 5cm">
    <div class="row">
        <div class="form-holder">
            <div class="form-profile-content ">
                <div class="form-items">
                    <h3>Are you a new user? </h3>
                    <p>Fill in the data below.</p>

                    <form id="registration_form" class="requires-validation" novalidate method="post">
                        <div class="col-md-12">
                            <input class="feedback-input" id="form_name" type="text" name="name" placeholder="Username"
                                   required>
                            <span class="error_form" id="username_error_message"></span>
                            <input class="feedback-input" id="form_email" type="text" name="email"
                                   placeholder="Email" required>
                            <span class="error_form" id="email_error_message"></span>
                            <input class="feedback-input" id="form_password" type="password" name="password"
                                   placeholder="Password" required>
                            <span class="error_form" id="password_error_message"></span>
                            <input class="feedback-input" id="form_retype_password" type="password"
                                   name="password_confirm" placeholder="Confirm Password" required>
                            <span class="error_form" id="retype_password_error_message"></span>
                        </div>
                        <br>

                        <div class="form-button mt-3 mb-3">
                            <button id="submit" type="submit" id="btnSubmit" class="btn btn-light">Submit</button>
                        </div>

                        <a href="/login"><h3>Already have an account?</h3></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs'); -%>

</body>
</html>